<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.training.jkn_first.training.Progress_Initial_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:id="@+id/progress_button"
        android:background="@drawable/progress_button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:id="@+id/imageView6"
                android:background="@drawable/progress_button_left" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="252dp"
                android:background="@drawable/progress_initial_weight_container">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/progress_weight_button"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_centerInParent="true"
                    android:background="@null" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="258dp"
                android:background="@drawable/progress_initial_cholesterol_container">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/progress_cholesterol_button"
                    android:layout_gravity="center_horizontal|bottom"
                    android:longClickable="false"
                    android:layout_centerInParent="true"
                    android:background="@null" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="258dp"
                android:background="@drawable/progress_initial_blood_container">

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/progress_blood_button"
                    android:layout_gravity="center_horizontal|bottom"
                    android:background="@null"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

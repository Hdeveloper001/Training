<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.training.jkn_first.training.Food_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:id="@+id/food_button"
        android:background="@drawable/food_button" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:background="#ffe8e8e8">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:id="@+id/imageView5"
                android:background="@drawable/food_button_left" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TODAY&apos;S ENERGY INTAKE"
                android:id="@+id/textView7"
                android:gravity="center"
                android:textSize="23dp"
                android:textColor="#ff59a56b"
                android:layout_marginTop="15dp"
                android:background="#ffe8e8e8"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffe8e8e8">

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/food_edit_button"
                    android:background="@drawable/edit_button"
                    android:layout_toRightOf="@+id/textView13"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/food_edit_text"
                    android:text="1475"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KJ"
                    android:id="@+id/textView13"
                    android:layout_toRightOf="@+id/food_edit_text"
                    android:layout_alignBottom="@+id/food_edit_text"
                    android:layout_marginBottom="15dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SEARCH FOR A FOOD ITEM BELOW TO START"
                android:id="@+id/food_search_alarm"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="#ff000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical"
                android:background="#ffffffff">

                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:id="@+id/food_search"
                    android:background="@drawable/food_find_background" />
            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:id="@+id/food_list"
                android:background="#ffffffff" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
